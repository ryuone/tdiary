<%# i.diary.rhtml $Revision: 1.5 $ %>
<H2><%= @date.strftime( opt['date_format'] ) %> <%= title %></H2>
<%%= body_enter_proc( Time::at( <%=@date.to_i%> ) ) %%>
<%
idx = 0
each_paragraph do |paragraph|
	if paragraph.subtitle then %>
		<P><A NAME="p<%= '%02d' % idx += 1 %>">*</A> <%= paragraph.subtitle %></P><%
	end
	if /^</ =~ paragraph.body then
		idx += 1 %>
		<%= paragraph.body %><%
	elsif paragraph.subtitle %>
		<P><%= paragraph.body.collect{|l|l.chomp}.join( "</P>\n<P>" ) %></P><%
	else %>
		<P><A NAME="p<%= '%02d' % idx += 1 %>">*</A> <% if opt['multi_user'] and paragraph.author then %>[<%= paragraph.author %>]<% end %><%= paragraph.body.collect{|l|l.chomp}.join( "</P>\n<P>" ) %></P><%
	end
end %>
<%%= body_leave_proc( Time::at( <%=@date.to_i%> ) ) %%><%
if opt['show_comment'] and count_comments > 0 then
	idx = 0 %>
	<P><%%=comment_today%%><%%=comment_total( <%=count_comments%> )%%>:<BR><%
	each_comment(opt['comment_limit'] ) do |comment|
		if comment.visible? %>
			<A NAME="c<%= '%02d' % idx += 1 %>">#</A>
			<%= CGI::escapeHTML( comment.name ) %> ¡Ø<%= comment.body.shorten( 200 ).make_link %>¡Ù<BR><%
		else
			idx += 1
		end
	end %></P>
	<%
end %>
