<%# i.day.rhtml $Revision: 1.4 $ %>
<%%update_proc if @mode == 'comment'%%>
<H1><%= @html_title %></H1>
<P>
<A HREF="<%= @index %><%%=anchor "<%= (@date-24*60*60).strftime( '%Y%m%d' ) %>" %%>" ACCESSKEY="1">[1]前日</A>|<A HREF="<%= @index %><%%=anchor "<%= (@date+24*60*60).strftime( '%Y%m%d' ) %>" %%>" ACCESSKEY="2">[2]翌日</A>|<A HREF="<%= @index %>" ACCESSKEY="3">[3]最新</A>|<A HREF="<%= @update %>" ACCESSKEY="0">[0]更新</A>
</P>
<%
if @diary then
	param = {
		'prefix' => 'i.',
		'index' => @index,
		'date_format' => @date_format,
		'section_anchor' => @section_anchor,
		'comment_anchor' => @comment_anchor,
		'long_mode' => false,
		'show_referer' => false,
		'referer_limit' => 0,
		'show_comment' => @show_comment,
		'comment_limit' => 100,
		'multi_user' => @multi_user,
		'anchor' => true,
	} %>
	<%= @diary.eval_rhtml( param, PATH ) %>
	<HR>
	<FORM METHOD="POST" ACTION="<%= @index %>">
	<INPUT TYPE="HIDDEN" NAME="date" VALUE="<%= @date.strftime( '%Y%m%d' ) %>">
	<P><%%=comment_description_short%%><BR>
	<%%=comment_name_label_short%%>: <input NAME="name"><BR>
	<%%=comment_mail_label_short%%>: <INPUT NAME="mail"><BR>
	<%%=comment_body_label_short%%>:<BR>
	<TEXTAREA NAME="body"></TEXTAREA><BR>
	<INPUT TYPE="SUBMIT" NAME="comment" value="<%%=comment_submit_label_short%%>"></P>
	</FORM><%
else %>
	<p><%= @date.strftime( @date_format ) %>の日記はありません。</P><%
end %>

